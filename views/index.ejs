<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>
<div class="container" style="padding-top: 32px;">
    <h1>Bem vindo ao Blog do Seu Zé</h1><br>
    <h2 style="padding: 16px;">Últimos Artigos</h2>
    <div style="background-color: #ebeffd; padding: 16px; border-radius: 25px;">
        <% articles.forEach(articles=>{ %>
            <div class="card" style="margin-top: 32px;">
                <div class="card-header">
                    <h3><%= articles.title %></h3>
                </div>
                <div class="card-body">
                    <a href="/article/<%= articles.slug %> "><button class="btn btn-success">Ler Mais</button></a>
                </div>
            </div>
        <% }) %>
        <a style="margin-left: 40%; margin-right: 40%;" href="/article/page/0"><button class="btn btn-success" style="margin-top:16px;width: 20%;">Ver todos os Artigos</button></a>
    </div>
</div>
<%- include('partials/footer.ejs') %>