<%- include('../../partials/header.ejs') %>
<%- include('../../partials/admnavbar.ejs') %>
<div class="container" style="margin-top: 32px;">
    <div class="card">
        <div class="card-header">
            <h2>Editar categoria <tag style="color: chocolate;"><%= category.name %></tag></h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/adm/categories/update">
                <input type="hidden" name="id" value="<%= category.id %>">
                <input class="form-control" type="text" name="name" placeholder="Novo nome para a categoria '<%= category.name %>'" value="<%= category.name %>">
                <button class="btn btn-success" type="submit" style="margin-top: 16px; float: right;">Atualizar</button>
            </form>
        </div>
    </div>
</div>
