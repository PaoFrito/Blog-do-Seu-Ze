<%- include('../../partials/header.ejs') %>
<div class="container" style="margin-top: 32px;">
    <h2>Categorias</h2>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% category.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.name %></th>
                    <th><%= category.slug %></th>
                    <th>
                        <form action="/adm/categories/upDate" method="POST" >
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-warning">Editar</button>
                        </form>
                        <form action="/adm/categories/delete" method="POST">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                        
                    </th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../../partials/footer.ejs') %>