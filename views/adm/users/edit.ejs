<%- include('../../partials/header.ejs') %>
<%- include('../../partials/admnavbar.ejs') %>
<style>
    .form-control{
        margin-top: 8px;
        margin-bottom: 8px;
    }
</style>
<div class="container" style="margin-top: 32px;">
    <div class="card">
        <div class="card-header">
            <h2>Alterar usu√°rio <tag style="color: chocolate;"><%= user.name %></tag></h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/adm/users/update">
                <input type="hidden" name="id" value="<%= user.id %>">
                <input type="hidden" name="oldEmail" value="<%= user.email %>">
                <input class="form-control" type="text" name="name" id="name" placeholder="Novo nome para <%= user.name %>" value="<%= user.name %>">
                <input class="form-control" type="email" name="email" placeholder="Novo E-mail" value="<%= user.email %>">
                <input class="form-control" type="password" name="password" placeholder="Nova Senha">
                <button class="btn btn-success" type="submit" style="margin-top: 16px; float: right;">Entrar</button>
            </form>
        </div>
    </div>
</div>
