<%- include('../../partials/header.ejs') %>
<%- include('../../partials/admnavbar.ejs') %>
<div class="container" style="margin-top: 32px;">
    <h2>Artigos</h2>
    <hr>
    <div class="card">
        <div class="card-header">
            <h4>Novo Usuádio</h4>
        <a class="navbar-brand" href="/adm/users/signup"><button class="btn btn-success">Go</button></a>
        </div>
    </div>
    <hr>
    <table class="table" style="margin-top: 64px;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>    
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td>
                        <form action="/adm/users/edit" method="POST" >
                            <input type="hidden" name="id" value="<%= user.id %>">
                            <button type="submit" class="btn btn-warning">Editar</button>
                        </form>
                        <br>
                        <form action="/adm/users/delete" method="POST">
                            <input type="hidden" name="id" value="<%= user.id %>">
                            <button type="submit" class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../../partials/footer.ejs') %>