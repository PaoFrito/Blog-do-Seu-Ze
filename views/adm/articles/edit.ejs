<%- include('../../partials/header.ejs') %>
<div class="container" style="margin-top: 32px;">
    <div class="card">
        <div class="card-header">
            <h2>Editar Artigo <tag style="color: chocolate;"><%= article.title %></tag></h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/adm/article/update">
                <!-- ID -->
                <input type="hidden" name="id" value="<%= article.id %>">
                <!-- article.title -->
                <input class="form-control" type="text" name="title" placeholder="Novo titulo para o artigo '<%= article.title %>'" value="<%= article.title %>">
                <br>
                <!-- article.content -->
                <textarea id="article" class="form-control"  name="content" rows="20"><%= article.content %></textarea>
                <br>
                <!-- article.categoryID -->
                <label><h5>Categoria</h5></label><br>
                <table>
                    <tr>
                        <% category.forEach(category => { %>
                            <td style="padding-left: 16px; padding-right: 16px">
                                <input type="radio" name="categoryId" value="<%= category.id %>">
                                <label><%= category.name %></label>
                            </td>
                        <%});%>
                    </tr>
                </table>
                <button class="btn btn-success" type="submit" style="margin-top: 16px; float: right;">Atualizar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
