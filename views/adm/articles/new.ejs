<%- include('../../partials/header.ejs') %>
<div class="container" style="margin-top: 32px;">
    <div class="card">
        <div class="card-header">
            <h2>Criar novo Artigo</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/adm/articles/create">
                <input class="form-control" type="text" name="title" placeholder="TÃ­tulo">
                <br>
                <textarea class="form-control"  name="content" placeholder="Meu Artigo"></textarea>
                <br>
                <label><h5>Categoria</h5></label><br>
                <table>
                    <tr>
                        <% category.forEach(category =>{%>
                            <td style="padding-left: 16px; padding-right: 16px">
                                <input type="radio" name="categoryId" value="<%= category.id %>">
                                <label><%= category.name %></label>
                            </td>
                        <%})%>
                    </tr>
                </table>
                <button class="btn btn-success" type="submit" style="margin-top: 16px; float: right;">Cadastrar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>