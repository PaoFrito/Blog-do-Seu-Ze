<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<div class="container" style="margin-top: 32px;">
    <h2><%= category.title%></h2>
    <hr>
    <div>
        <div>
            <h6>
                <%= category.name %> 
            </h6>
        </div>
        <div style="padding: 30px;border-radius: 10px;">
            <% category.articles.forEach(articles=>{ %>
                <div class="card" style="margin-top: 8px;margin-bottom: 8px;">
                    <div class="card-header">
                        <%= articles.title %>
                        <a style="float: right;" href="/article/<%= articles.slug %>"><button class="btn btn-success">Ler Artigo</button></a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>  
    <hr>
</div>
<%- include('../partials/footer.ejs') %>